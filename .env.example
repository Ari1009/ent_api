# Movies & Anime API Environment Configuration
# Copy this file to .env and modify the values as needed

# API Configuration
API_TITLE="Movies & Anime API"
API_VERSION="2.0.0"
DEBUG=false

# Server Configuration
HOST="127.0.0.1"
PORT=8080

# CORS Configuration (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,https://your-frontend-domain.com"

# Cache Configuration
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# Request Configuration
REQUEST_TIMEOUT=10
MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL="INFO"

# External APIs
GOGOANIME_BASE_URL="https://gogoanime.ai/"
LOOKMOVIES_BASE_URL="https://lookmoviess.com"

# Security
ALLOWED_HOSTS="*"